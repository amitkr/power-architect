<shortcuts>
	<programGroup defaultName="Power Loader Suite\Architect"
		location="applications"/>
	<shortcut name="Power Architect" target="javaw.exe"
		programGroup="yes"
		commandLine="-jar architect.jar"
		workingDirectory="$INSTALL_PATH"
		description="Power Architect Modeling Tool"
		iconFile="$INSTALL_PATH/architect.ico" desktop="yes" 
		startMenu="yes">
	</shortcut>
	
	<shortcut name="Uninstall Power Architect" target="$INSTALL_PATH/uninstaller/uninstaller.jar"
		programGroup="yes"
		description="Remove the Power Architect Modeling Tool"
		iconFile="$INSTALL_PATH/uninstall.ico" desktop="no" >
	</shortcut>
</shortcuts>